@model ADOAnalyser.Models.ProjectModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container mt-5">
        <div class="row">
            @foreach (var project in Model.value)
            {
                <div class="col-md-4 mb-4">
                    <a href="WorkType/Index?project=@project.name" style="text-decoration:none">
                        <div class="card h-100 text-center">
                            <div class="card-body d-flex flex-column align-items-start justify-content-start">
                                <img class="icon-rect" src="@project.defaultTeamImageUrl" />
                                <h5 class="card-title">@project.name</h5>
                                <p class="card-text text-start">@project.description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>


<style>
    .icon-rect {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10%;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 15px;
    }

</style>

